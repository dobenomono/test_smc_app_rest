{
    "workflowApiVersion": "1.1",
    "metaData": {
       "icon": "images/icon.png",
       "category": "custom"
    },
    "type": "REST",
    "lang": {
       "en-US": {
           "name": "custom activity",
           "description": "An example REST activity using workflow API v1.1 format."
       }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                    "emailAddress": "{{InteractionDefaults.Email}}"
                },
                {
                    "phoneNumber": "{{Contact.Default.PhoneNumber}}"
                }
            ],
            "outArguments": [
                {
                    "foundSignupDate": ""
                }
            ],
            "url": "https://testresthoge.herokuapp.com/samples/hello",
            "verb": "POST",
            "body": "",
            "header": "",
            "format": "json",
            "useJwt": false,
            "timeout": 10000
        }
    },
    "configurationArguments": {
       "save": {
           "url": "https://testresthoge.herokuapp.com/samples/hello",
           "body": "",
           "verb": "POST",
           "useJwt": false
       },
       "publish": {
           "url": "https://testresthoge.herokuapp.com/samples/hello",
           "body": "",
           "verb": "POST",
           "useJwt": false
       },
       "validate": {
           "url": "https://testresthoge.herokuapp.com/samples/hello",
           "body": "",
           "verb": "POST",
           "useJwt": false
       },
       "stop": {
           "url": "https://testresthoge.herokuapp.com/samples/hello",
           "body": "",
           "verb": "POST",
           "useJwt": false
       }
    },
    "wizardSteps": [
       { "label": "Step 1", "key": "step1" },
       { "label": "Step 2", "key": "step2" },
       { "label": "Step 3", "key": "step3" },
       { "label": "Step 4", "key": "step4", "active": false }
    ],
    "userInterfaces": {
       "configModal": {
           "height": 200,
           "width": 300,
           "fullscreen": true
       }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "phoneNumber": {
                            "dataType": "Phone",
                            "isNullable": false,
                            "direction": "in"   
                        }
                    },
                    {
                        "emailAddress": {
                            "dataType": "Email",
                            "isNullable": false,
                            "direction": "in"
                        }
                    }
                ],
                "outArguments": [
                    {
                        "foundSignupDate": {
                            "dataType": "Date",
                            "direction": "out",
                            "access": "visible"
                        }
                    }
                ]
            }
        }
    }
}